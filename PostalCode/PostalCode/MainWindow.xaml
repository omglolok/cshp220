<Window x:Class="PostalCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostalCode"
        mc:Ignorable="d"
        Title="MainWindow" Height="161.4" Width="281.7">
    <Grid Margin="0,-1,2,1">
        <TextBox x:Name="txt_PostalCode" HorizontalAlignment="Left" Height="23" Margin="10,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" TextChanged="txt_PostalCode_TextChanged"/>
        <Button x:Name="btn_Submit" Content="Submit" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" Width="250" IsEnabled="False" Click="btn_Submit_Click"/>
    </Grid>
</Window>
